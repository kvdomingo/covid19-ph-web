    <title>{{ active_page }} | COVID-19 PH Tracker</title>

    {% if not settings.DEBUG and settings.ON_HEROKU %}
        <script async src="https://www.googletagmanager.com/gtag/js?id=UA-162676656-1"></script>
        <script>
            window.dataLayer = window.dataLayer || [];
            function gtag(){dataLayer.push(arguments);}
            gtag('js', new Date());

            gtag('config', 'UA-162676656-1');
        </script>

        <meta name="description" content="COVID-19 Philippines cases tracking map, information hub, and self-diagnostic tool." />
        <meta property="og:title" content="COVID-19 PH Tracker" />
        <meta property="og:url" content="http://ncovenience.herokuapp.com" />
        <meta name="og:description" content="COVID-19 Philippines cases tracking map, information hub, and self-diagnostic tool." />
        <meta property="og:type" content="website" />
        <meta property="og:locale" content="en_US" />
        <meta property="twitter:card" content="summary" />
        <meta property="twitter:creator" content="@rockentothemoon" />
        <meta name="twitter:image:alt" content="nCoVenience" />
        <meta name="twitter:description" content="COVID-19 Philippines cases tracking map, information hub, and self-diagnostic tool." />
    {% endif %}
