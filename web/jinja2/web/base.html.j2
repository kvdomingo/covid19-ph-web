<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark" style="box-shadow: none;">
        <a class="navbar-brand cl" href="{{ url('index') }}">
            <span style="font-variant: small-caps;">ncovenience</span>
            : COVID-19 PH Tracker
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false", aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item {{ 'active' if active_page == 'Dashboard' }}">
                    <a class="nav-link {{ active }}" href="{{ url('index') }}">Home</a>
                </li>
                <li class="nav-item {{ 'active' if active_page == 'API' }}">
                    <a class="nav-link" href="{{ url('api_docs') }}">API</a>
                </li>
            </ul>
        </div>
    </nav>
    {% block body %}{% endblock %}

    <footer class="page-footer font-small bg-dark text-light pt-5 text-center">
        <div class="container-fluid text-center py-3">
            <a href="https://kvdomingo.xyz" class="d-block">
                <img src="https://res.cloudinary.com/kdphotography-assets/image/upload/v1/logo/logo-white.png" height="30" alt="KVD logo" />
            </a>
            <a href="mailto:hello@kvdomingo.xyz" class="d-block my-2">hello@kvdomingo.xyz</a><br />
            <div class="my-1">
                <h4 style="display: inline;"><a class="mx-2" href="https://linkedin.com/kvdomingo" target="_blank"><i class="fab fa-linkedin"></i></a></h4>
                <h4 style="display: inline;"><a class="mx-2" href="https://github.com/kvdomingo" target="_blank"><i class="fab fa-github"></i></a></h4>
            </div>
        </div>
        <div class="footer-copyright text-center py-4">
            &copy; {{ now.year }} <a href="mailto:hello@kvdomingo.xyz">Kenneth V. Domingo</a>
